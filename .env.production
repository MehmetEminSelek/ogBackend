# =================================
# OG SİPARİŞ YÖNETİM SİSTEMİ - PRODUCTION
# =================================

# Production Mode
NODE_ENV=production
PORT=3000

# Database - Mevcut PostgreSQL setup
DATABASE_URL="postgresql://ogform:secret@localhost:5432/ogformdb?schema=public"

# Domain Configuration
DOMAIN="ogsiparis.com"
FRONTEND_URL="https://ogsiparis.com"
BACKEND_URL="https://api.ogsiparis.com"

# JWT Security - Production secrets
JWT_SECRET="prod_jwt_secret_64_chars_change_this_for_production_use_strong_random"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Session Security
SESSION_SECRET="prod_session_secret_64_chars_change_this_for_production_use_strong"
SESSION_TIMEOUT_MINUTES=480

# CSRF Protection
CSRF_SECRET="prod_csrf_secret_64_chars_change_this_for_production_use_strong_key"

# Security Settings
BCRYPT_ROUNDS=12
FORCE_HTTPS=true
CORS_ORIGIN="https://ogsiparis.com,https://www.ogsiparis.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# File Upload
MAX_FILE_SIZE="10MB"
UPLOAD_DIR="/uploads"

# Email (Hostinger SMTP)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT=587
SMTP_USER="noreply@ogsiparis.com"
SMTP_PASS="email_password_here"

# Logging
LOG_LEVEL="info"
ERROR_REPORTING=true

# Cache
CACHE_TTL=3600 